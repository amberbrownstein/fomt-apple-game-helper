<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="25dp"
    android:layout_marginTop="75dp"
    android:layout_marginRight="25dp"
    android:layout_marginBottom="25dp"
    android:orientation="vertical">

    <TextView
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center|top"
        android:text="Huang's Apple Game"
        android:textAlignment="center"
        android:textAppearance="@android:style/TextAppearance.Material.Display2" />

    <TextView
        android:id="@+id/currentArrangementTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Current Arrangement:"
        android:textAlignment="center"
        android:textAppearance="@android:style/TextAppearance.Material.Large"
        android:textSize="30sp" />

    <EditText
        android:id="@+id/editArrangementText"
        android:layout_width="match_parent"
        android:layout_height="76dp"
        android:layout_marginBottom="15dp"
        android:capitalize="none"
        android:editable="true"
        android:ems="10"
        android:inputType="text"
        android:text="SHA"
        android:textAlignment="center"
        android:textAppearance="@android:style/TextAppearance.Material.Display2" />

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:padding="0dp">

        <TableRow
            android:id="@+id/row1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center">

            <Button
                android:id="@+id/buttonRL"
                style="@android:style/Widget.DeviceDefault.Button"
                android:layout_gravity="left"
                android:layout_margin="5dp"
                android:gravity="center_horizontal|center_vertical"
                android:includeFontPadding="false"
                android:minWidth="150dp"
                android:minHeight="100dp"
                android:onClick="onClickUpdateArrangement"
                android:tag="0"
                android:text="RL"
                android:textAlignment="center"
                android:textAppearance="@android:style/TextAppearance.Material.Display1"
                android:textSize="30sp" />

            <Button
                android:id="@+id/buttonRC"
                android:layout_gravity="right"
                android:layout_margin="5dp"
                android:minWidth="150dp"
                android:minHeight="100dp"
                android:onClick="onClickUpdateArrangement"
                android:tag="3"
                android:text="R--C"
                android:textAlignment="center"
                android:textAppearance="@android:style/TextAppearance.Material.Display1"
                android:textSize="30sp" />

        </TableRow>

        <TableRow
            android:id="@+id/row2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center">

            <Button
                android:id="@+id/buttonCRL"
                android:layout_gravity="left"
                android:layout_margin="5dp"
                android:gravity="center_horizontal|center_vertical"
                android:minWidth="150dp"
                android:minHeight="100dp"
                android:onClick="onClickUpdateArrangement"
                android:tag="1"
                android:text="CRC-(L)"
                android:textAppearance="@android:style/TextAppearance.Material.Display1"
                android:textSize="30sp" />

            <Button
                android:id="@+id/buttonCRR"
                android:layout_gravity="right"
                android:layout_margin="5dp"
                android:minWidth="150dp"
                android:minHeight="100dp"
                android:onClick="onClickUpdateArrangement"
                android:tag="4"
                android:text="CRCL(R)"
                android:textAlignment="center"
                android:textAppearance="@android:style/TextAppearance.Material.Large"
                android:textSize="30sp" />

        </TableRow>

        <TableRow
            android:id="@+id/row3"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center">

            <Button
                android:id="@+id/buttonCL"
                android:layout_gravity="left"
                android:layout_margin="5dp"
                android:minWidth="150dp"
                android:minHeight="100dp"
                android:onClick="onClickUpdateArrangement"
                android:tag="2"
                android:text="C--L"
                android:textAppearance="@android:style/TextAppearance.Material.Display1"
                android:textSize="30sp" />

            <Button
                android:id="@+id/buttonCRC"
                android:layout_gravity="right"
                android:layout_margin="5dp"
                android:minWidth="150dp"
                android:minHeight="100dp"
                android:onClick="onClickUpdateArrangement"
                android:tag="5"
                android:text="CRL(C)"
                android:textAppearance="@android:style/TextAppearance.Material.Display1"
                android:textSize="30sp" />

        </TableRow>

        <TableRow
            android:id="@+id/row4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">

            <Button
                android:id="@+id/button_undo"
                android:layout_width="150dp"
                android:layout_height="100dp"
                android:layout_margin="5dp"
                android:gravity="center"
                android:onClick="onClickUndo"
                android:tag="5"
                android:text="UNDO"
                android:textAppearance="@android:style/TextAppearance.Material.Display1"
                android:textSize="30sp" />
        </TableRow>

    </TableLayout>
</LinearLayout>